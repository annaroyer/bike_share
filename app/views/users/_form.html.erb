<!DOCTYPE html>
<html>
  <head>
  </head>
  <body>
  </br>
  <%= form_for @user do |f| %>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">
      <%= f.label :name, "Name" %> </label>
    <div class="col-sm-10">
      <%= f.text_field :name %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label">
      <%= f.label :address, "Address" %> </label>
    <div class="col-sm-10">
      <%= f.text_field :address %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label">
      <%= f.label :email %> </label>
    <div class="col-sm-10">
      <%= f.text_field :email %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label">
      <%= f.label :password %> </label>
      <div class="col-sm-10">
        <%= f.password_field :password %>
      </div>
  </div>


    <%= f.submit %>

  <% end %>
  </body>
</html>
