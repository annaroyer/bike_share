<%= form_for @user do |f| %>
  <div class="form-group row">
  <label class="col-sm-2 col-form-label">
    <%= f.label :first_name %> </label>
  <div class="col-sm-10">
    <%= f.text_field :first_name %>
  </div>
  </div>

  <label class="col-sm-2 col-form-label">
    <%= f.label :last_name %> </label>
  <div class="col-sm-10">
    <%= f.text_field :last_name %>
  </div>
  </div>

  <div class="form-group row">
  <label class="col-sm-2 col-form-label">
    <%= f.label :address %> </label>
  <div class="col-sm-10">
    <%= f.text_field :address %>
  </div>
  </div>

  <div class="form-group row">
  <label class="col-sm-2 col-form-label">
    <%= f.label :city %> </label>
  <div class="col-sm-10">
    <%= f.text_field :city %>
  </div>

  </div>

  <div class="form-group row">
  <label class="col-sm-2 col-form-label">
    <%= f.label :state %> </label>
  <div class="col-sm-10">
    <%= f.text_field :state %>
  </div>
  </div>

  <div class="form-group row">
  <label class="col-sm-2 col-form-label">
    <%= f.label :zip_code %> </label>
  <div class="col-sm-10">
    <%= f.text_field :zip_code %>
  </div>
  </div>

  <div class="form-group row">
  <label class="col-sm-2 col-form-label">
    <%= f.label :email %> </label>
  <div class="col-sm-10">
    <%= f.email_field :email %>
  </div>
  </div>

  <div class="form-group row">
  <label class="col-sm-2 col-form-label">
    <%= f.label :password %> </label>
    <div class="col-sm-10">
      <%= f.password_field :password %>
    </div>
  </div>
  <%= f.submit %>
<% end %>
