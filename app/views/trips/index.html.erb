<h2> 30 Most Recent Trips</h2>

<% unless params[:offset] %>
  <%= link_to "Next 30 Trips", "/trips/?offset=30" %> <br>
<% end %>
<% if params[:offset] %>
  <%= link_to "Next 30 Trips", "/trips/?offset=#{(params[:offset]).to_i + 30}" %> <br>
<% end %>
<% if params[:offset].to_i != 0 %>
  <%= link_to "Previous 30 Trips", "/trips/?offset=#{(params[:offset]).to_i - 30}" %> <br>
<% end %>

<% @trips.each do |trip| %>
  <strong>Trip Duration:</strong> <%= trip.duration %>
  <strong>Trip Start Date:</strong> <%= trip.start_date %>
  <strong>Trip Starting Station:</strong> <%= trip.start_station_id %>
  <strong>Trip End Date:</strong> <%= trip.end_date %>
  <strong>Trip Ending Station:</strong> <%= trip.end_station_id %>
  <strong>Bike Used:</strong> <%= trip.bike_id %>
  <strong>Subcriber Type:</strong> <%= trip.subscription_type %>
  <strong>Trip Zip Code:</strong> <%= trip.zip_code %>
  <br>
  <div class="trip_<%= trip.id %>">
    <%if current_user && current_user.admin? %>
     <button  type="button" class="btn btn-warning"><%= link_to "Edit", edit_admin_trip_path(trip) %></button>
     <button  type="button" class="btn btn-danger"><%= link_to "Delete", admin_trip_path(trip), method: :delete %></button>
    <% end %>
  </div>
  <br>
<% end %>
