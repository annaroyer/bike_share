<h1 class="main-header">All Conditions </h1>
<div class="card-container">
  <% @conditions.each do |condition| %>
    <figure class="card">
      <h2 class="sub-header"><%= link_to condition.date, condition_path(condition) %> </h2>
      <p class="regular-text">Max Temperature (F): <%= condition.max_temperature%>  </p>
      <p class="regular-text">Mean Temperature (F): <%= condition.mean_temperature%> </p>
      <p class="regular-text">Min Temperature (F): <%= condition.min_temperature%></p>
      <p class="regular-text">Mean Humidity: <%= condition.mean_humidity%> </p>
      <p class="regular-text">Mean Visibility (Miles): <%= condition.mean_visibility%> </p>
      <p class="regular-text">Mean Wind Speed (MPH): <%= condition.mean_wind_speed%> </p>
      <p class="regular-text">Mean Precipitation (Inches): <%= condition.mean_precipitation%></p>
      <p class="regular-text">Zip Code: <%= condition.zip_code%></p>
      <% if current_admin? %>
        <button type="button" class="btn btn-warning"><%= link_to "Edit", edit_admin_condition_path(condition) %></button>
        <button type="button" class="btn btn-danger"><%= link_to "Delete", admin_condition_path(condition), method: :delete %></button></br></br>
      <% end %>
    </figure>
  <% end %>
</div>
