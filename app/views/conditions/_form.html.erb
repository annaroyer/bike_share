<!DOCTYPE html>
<html>
  <head>
  </head>
    <body>
    </br>
    <%= form_for @condition do |f| %>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label">
        <%= f.label :date, "Date" %> </label>
      <div class="col-sm-10">
        <%= f.date_field :date %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label">
        <%= f.label :max_temperature, "Maximum Temperature (F)" %> </label>
      <div class="col-sm-10">
        <%= f.number_field :max_temperature %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label">
        <%= f.label :mean_temperature, "Mean Temperature (F)" %> </label>
      <div class="col-sm-10">
        <%= f.number_field :mean_temperature %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label">
        <%= f.label :min_temperature, "Minimum Temperature (F)" %> </label>
      <div class="col-sm-10">
        <%= f.number_field :min_temperature %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label">
        <%= f.label :mean_humidity, "Mean Temperature" %> </label>
      <div class="col-sm-10">
        <%= f.number_field :mean_humidity %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label">
        <%= f.label :mean_visibility, "Mean Visibility (Miles)" %> </label>
      <div class="col-sm-10">
        <%= f.number_field :mean_visibility %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label">
        <%= f.label :mean_visibility, "Mean Wind Speed (MPH)" %> </label>
      <div class="col-sm-10">
        <%= f.number_field :mean_visibility %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label">
        <%= f.label :mean_precipitation, "Mean Precipitation (Inches)" %> </label>
      <div class="col-sm-10">
        <%= f.number_field :mean_precipitation%>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label">
        <%= f.label :zip_code, "Zip Code" %> </label>
      <div class="col-sm-10">
        <%= f.number_field :zip_code%>
      </div>
    </div>

    <%= f.submit %>

  <% end %>
  </body>
</html>
