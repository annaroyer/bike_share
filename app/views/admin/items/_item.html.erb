<tr>
  <th>
    <h1><%= link_to item.title, item_path(item) %></h1>
    <%= link_to image_tag(item.image.url, class: 'media-object'), item.image.url, target: '_blank' %>
  </th>
  <th>$<%= item.price %></th>
  <th><%= item.description %></th>
  <th><%= item.status %></th>
  <th>
      <button><%= link_to "Edit", edit_admin_item_path(item), class: "edit-#{item.id}" %></button>
      <% if item.active? %>
        <%= button_to 'Retire', admin_item_path(item, item: {status: 'retired'}), method: :put, class: "retire-#{item.id}" %>
      <% elsif item.retired? %>
        <%= button_to 'Reactivate', admin_item_path(item, item: {status: 'active'}), method: :put, class: "reactivate-#{item.id}" %>
      <% end %>
  </th>
</tr>
